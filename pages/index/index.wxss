/**index.wxss**/
swiper{
  height: 100px;
}
swiper image{
  height: 100%;
  width: 100%;
}

.navBox{
  white-space: nowrap;
  display: flex;
  height: 70px;
}
.navBox .navBtn{
  display: inline-block;
  margin: 10px;
  background: #7ecef4;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  text-align: center;
  line-height: 50px;
  color: #fff;
}

.cardBox{
  margin: 50px 0px 0px 0px;
  padding-bottom: 10px;
  background: #fff;
  position: relative;
}

.classMore{
  position: absolute;
  top: -30px;
  height: 40px;
  right: 30px;
  z-index: -1;
  border-radius: 5px;
  font-size: 12px;
  color: #fff;
  padding: 5px;
  background: #088aa8;
}

.classTitle{
  position: absolute;
  top: -40px;
  color: #606060;
  height: 40px;
  line-height: 40px;
}
.cardBox .cardItem{
  padding: 0px 0px 10px 0px;
  border-radius: 0px 0px 10px 10px;
  box-shadow: 2px 1px 5px #ccc;
  background: #fff;
  margin: 0px 0px 30px 0px;
  font-size: 12px;
  overflow: hidden;
}
.cardBox .cardItem:last-child{
  margin: 0px 0px -10px 0px;
}

.cardImg{
  width: 100%;

}

.cardTitle{
  margin: 2px 10px 2px 10px;
  font-size: 14px;
}
.cardInfo{
  margin: 2px 5px 2px 5px;
  font-size: 12px;
  color: #808080;
}